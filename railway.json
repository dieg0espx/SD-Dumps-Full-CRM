{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "cron": [
    {
      "name": "expire-payment-links",
      "schedule": "0 0 * * *",
      "command": "curl $RAILWAY_PUBLIC_DOMAIN/api/payment-link/expire-old"
    }
  ]
}
